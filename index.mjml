<mjml>
  <mj-body>
<!-- HEADER -->
   <mj-section background-color="#ededed">
      <mj-column>
          <mj-image src="https://github.com/Drlazinho/email-marketing-lista-de-alunos/blob/master/img/logo.png?raw=true" alt="Logo StyleCasual" width="300px"/>
      </mj-column>
    </mj-section>
<!-- BANNER -->
