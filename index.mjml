        <mj-text align="center" line-height="20px">
          <p>Style Casual © 2021 Style Casual, Inc. All Rights Reserved.<br>4562 Hazy Panda Limits, Chair Crossing, Kentucky, US, 607898</p>
        </mj-text>
      </mj-column>
    </mj-section>
<!-- Privacy -->
    <mj-section>
      <mj-column width="600px">
   				<mj-table>
        	<tr style="text-align:center;">
            <th><a href="#" style="color: #afaaaa">Visit Us</a></th>
            <th><a href="#" style="color: #afaaaa">Privacy Policy</a></th>
