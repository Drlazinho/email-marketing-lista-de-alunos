        </mj-text>
      </mj-column>
    </mj-section>
<!-- TABELA -->
    <mj-section padding-top="0">
    <mj-column width="600px" padding-top="0">
        <mj-table padding="0">
          <tr style="border-bottom:1px solid #c9c9c9;text-align:center;">
            <th>Mat</th>
            <th>Colaborador</th>
            <th>Curso</th>
